---
import Architecture from "../components/Architecture.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import LandingSection from "../components/LandingSection.astro";
import Marquee from "../components/Marquee.astro";
import Navigation from "../components/Navigation.astro";
import Tagline from "../components/Tagline.astro";
import WorkflowDemo from "../components/WorkflowDemo.astro";
import { site } from "../data/site";
import Layout from "../layouts/Layout.astro";

const { navigation, marquee, hero, architecture, workflow, tagline, footer } = site;
---

<Layout>
  <Navigation {...navigation} />

  <!-- Hero + Marquee wrapped in LandingSection for viewport fit -->
  <LandingSection>
    <Hero {...hero} />
    <Marquee items={marquee.items} />
  </LandingSection>

  <Architecture {...architecture} />

  <Marquee items={['WORKFLOW_EXECUTION_DEMO']} gap="4rem" />

  <WorkflowDemo {...workflow} />

  <Tagline {...tagline} />

  <Footer {...footer} />
</Layout>
