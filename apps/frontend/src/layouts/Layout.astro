---
import "../styles/global.css";
import cormorantLatinItalicWoff2 from "@fontsource/cormorant-garamond/files/cormorant-garamond-latin-400-italic.woff2";
import cormorantCyrillicItalicWoff2 from "@fontsource/cormorant-garamond/files/cormorant-garamond-cyrillic-400-italic.woff2";
import { designTokens } from "../config/design";

const cssVarStyle = Object.entries(designTokens)
  .map(([key, value]) => `${key}:${value}`)
  .join(";");
---

<html lang="en" style={cssVarStyle}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preload" href={cormorantLatinItalicWoff2} as="font" type="font/woff2" crossorigin="anonymous" />
		<link rel="preload" href={cormorantCyrillicItalicWoff2} as="font" type="font/woff2" crossorigin="anonymous" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Schastliv</title>
	</head>
	<body>
		<slot />
	</body>
</html>
